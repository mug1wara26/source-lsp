{
    "comments": {
      "lineComment": "//",
      "blockComment": ["/*", "*/"]
    },
    "brackets": [
      ["{", "}"],
      ["[", "]"],
      ["(", ")"]
    ],
    "autoClosingPairs": [
      { "open": "{", "close": "}" },
      { "open": "[", "close": "]" },
      { "open": "(", "close": ")" },
      { "open": "'", "close": "'" },
      { "open": "\"", "close": "\"" },
      { "open": "`", "close": "`" }
    ],
    "surroundingPairs": [
      { "open": "{", "close": "}" },
      { "open": "[", "close": "]" },
      { "open": "(", "close": ")" },
      { "open": "'", "close": "'" },
      { "open": "\"", "close": "\"" },
      { "open": "`", "close": "`" }
    ],
    "wordPattern": "-?\\d*\\.\\d\\w*|\\w+",
    "indentationRules": {
      "increaseIndentPattern": "(\\{[^}\"']*|\\([^\\)]*$|\\[[^\\]]*$)",
      "decreaseIndentPattern": "^\\s*[\\}\\]].*$"
    },
    "onEnterRules": [
      {
        "beforeText": "^\\s*\\b(if|else|for|while||function)\\b.*\\{\\s*$",
        "action": { "indentAction": "Indent" }
      },
      {
        "beforeText": "^\\s*\\{\\s*$",
        "action": { "indentAction": "Indent" }
      },
      {
        "beforeText": "^\\s*\\}\\s*$",
        "action": { "indentAction": "Outdent" }
      }
    ]
  }
  